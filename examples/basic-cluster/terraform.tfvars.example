vsphere_server = "vcenter.example.com"
vsphere_user   = "administrator@vsphere.local"
# vsphere_password = "password"  # Use TF_VAR_vsphere_password

datacenter    = "Datacenter1"
datastore     = "datastore1"
cluster       = "Cluster1"
template_name = "ubuntu-22.04-template"

# ==============================================================================
# 5-VM CLUSTER CONFIGURATION EXAMPLES
# ==============================================================================

# Example 1: Basic 5-VM cluster with DHCP (RECOMMENDED)
vm_count    = 5
name_prefix = "web-server"    # Creates: web-server-1, web-server-2, web-server-3, web-server-4, web-server-5

# Resource allocation per VM
num_cpus  = 2      # 2 CPUs per VM (Total: 10 CPUs)
memory    = 4096   # 4GB RAM per VM (Total: 20GB RAM)
disk_size = 40     # 40GB disk per VM (Total: 200GB storage)

# Network Configuration - DHCP 
use_dhcp = true
networks = [
  {
    name         = "VM Network"        # Management network
    ipv4_address = null               # Use DHCP
    ipv4_netmask = 24
  },
  {
    name         = "VM Network 2"      # Data network  
    ipv4_address = null               # Use DHCP
    ipv4_netmask = 24
  }
]

